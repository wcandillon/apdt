<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.eclipse.ui.decorators">
	  <decorator
         adaptable="true"
         class="org.phpaspect.apdt.ui.APDTDecorator"
         id="APDTDecorator"
         label="Decorator Label"
         objectClass="org.eclipse.core.resources.IResource"
         state="true"> 
	  </decorator> 
	</extension>
   <extension
         id="phpAspectBuilder"
         name="PHPAspect Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="org.phpaspect.apdt.builder.PHPAspectBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="phpAspectNature"
         name="PHPAspect Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.phpaspect.apdt.builder.PHPAspectNature">
         </run>
      </runtime>
      <builder
            id="org.phpaspect.apdt.phpAspectBuilder">
      </builder>
      <requires-nature id="org.eclipse.php.core.PHPNature" />
   </extension>
   <!-- Doesn't work -->
   <extension
         point="org.eclipse.ui.ide.projectNatureImages">
      <image
            icon="icons/phpaspect_ovr.gif"
            natureId="org.phpaspect.apdt.phpAspectNature"
            id="org.phpaspect.apdt.phpAspectProjectNatureImage">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.core.resources.IResource"
            adaptable="true"
            id="tools.menu">
            <menu
            	label="PHPAspect Tools"
            	path="additions"
            	id="tools.submenu">
            	<groupMarker name="content" />
            	<separator name="additions" />
            </menu>
      </objectContribution>
      <objectContribution
            objectClass="org.eclipse.core.resources.IResource"
            adaptable="true"
            id="convertToPHPAspect">
	         <action
	               label="Convert to PHPAspect Project"
	               class="org.phpaspect.apdt.builder.ToggleNatureAction"
	               id="addphpaspectnatureaction"
	               menubarPath="tools.submenu/content">
	         </action>
        <visibility>
         	<and>
	         	<objectState name="nature" value="org.eclipse.php.core.PHPNature"/>
	         	<not>
		         	<objectState name="nature" value="org.phpaspect.apdt.phpAspectNature"/>
		        </not>
		    </and>
         </visibility>
      </objectContribution>
      <objectContribution
            objectClass="org.eclipse.core.resources.IProject"
            adaptable="true"
            id="convertToPHP">
         <visibility>
         	<objectState name="nature" value="org.phpaspect.apdt.phpAspectNature"/>
         </visibility>
         <action
               label="Convert to PHP Project"
               class="org.phpaspect.apdt.builder.ToggleNatureAction"
               menubarPath="tools.submenu/content"
               id="removephpaspectnatureaction">
         </action>
      </objectContribution>
   </extension>
   <extension
         id="apProblem"
         name="PHPAspect Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            name="PHPAspect"
            id="org.phpaspect.apdt">
      </category>
      <wizard
            category="org.phpaspect.apdt"
            class="org.phpaspect.apdt.ui.wizards.PHPaspectNewWizard"
            icon="icons/new_aspect_wizard.gif"
            id="org.phpaspect.apdt.wizards.PHPaspectNewWizard"
            name="Aspect"
            finalPerspective="org.eclipse.php.perspective">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.eclipse.php.internal.ui.editor.PHPStructuredEditor"
            contributorClass="org.eclipse.php.internal.ui.editor.PHPEditorActionBarContributor"
            default="true"
            icon="icons/phpaspectfile.gif"
            id="org.phpaspect.apdt.editor"
            extension="ap"
            name="PHPAspect Editor"
            symbolicFontName="org.eclipse.wst.sse.ui.textfont">
            <contentTypeBinding contentTypeId="org.phpaspect.apdt.phpaspectsource" />
      </editor>
   </extension>
   <extension
         point="org.eclipse.core.runtime.contentTypes">
      <content-type
            base-type="org.eclipse.php.core.phpsource"
            file-extensions="ap"
            id="phpaspectsource"
            name="PHPAspect Content Type"
            priority="high">
      </content-type>
   </extension>
</plugin>
