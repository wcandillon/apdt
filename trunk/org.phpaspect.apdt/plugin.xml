<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="phpAspectBuilder"
         name="PHPAspect Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="org.phpaspect.apdt.builder.PHPAspectBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="phpAspectNature"
         name="PHPAspect Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.phpaspect.apdt.builder.PHPAspectNature">
         </run>
      </runtime>
      <builder
            id="org.phpaspect.apdt.phpAspectBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            objectClass="org.eclipse.core.resources.IProject"
            nameFilter="*"
            id="org.phpaspect.apdt.contribution1">
         <action
               label="Add/Remove Sample Nature"
               class="org.phpaspect.apdt.builder.ToggleNatureAction"
               menubarPath="additions"
               enablesFor="+"
               id="org.phpaspect.apdt.addRemoveNatureAction">
         </action>
      </objectContribution>
   </extension>
   <extension
         id="xmlProblem"
         name="XML Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            name="PHPAspect"
            id="org.phpaspect.apdt">
      </category>
      <wizard
            category="org.phpaspect.apdt"
            class="org.phpaspect.apdt.wizards.PHPaspectNewWizard"
            icon="icons/new_aspect_wizard.gif"
            id="org.phpaspect.apdt.wizards.PHPaspectNewWizard"
            name="Aspect">
      </wizard>
   </extension>

</plugin>
