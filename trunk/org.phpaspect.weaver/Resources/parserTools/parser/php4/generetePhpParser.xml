<project default="generateParser">

	<target name="generateParser">
		<java 
			jar="../../javacup/java-cup-10k.jar" 
			input="php_parser4.cup"
			fork="true">
			<arg value="-compact_red"/>
			<arg value="-expect"/>
			<arg value="4"/>
			<arg value="-parser"/>
			<arg value="PhpParser4"/>
			<arg value="-symbols"/>
			<arg value="ParserConstants4"/>
			<arg value="-interface"/>
		</java>

		<replace
			file="PhpParser4.java"
			token="extends java_cup.runtime.lr_parser"
			value="extends java_cup.runtime.lr_parser implements PhpParser"/>
		
		 
		<move
			file="PhpParser4.java"
			todir="../../../../src/org/eclipse/php/internal/core/phpModel/parser/php4"/>

		<move
			file="ParserConstants4.java"
			todir="../../../../src/org/eclipse/php/internal/core/phpModel/parser/php4"/>

	</target>



</project>
