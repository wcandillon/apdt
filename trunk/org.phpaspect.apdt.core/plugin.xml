<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <!-- PHPAspect Script Nature -->
   <extension id="nature" point="org.eclipse.core.resources.natures">
      <runtime>
         <run class="org.phpaspect.apdt.internal.core.APDTNature"/>
      </runtime>
      <requires-nature id="org.eclipse.php.core.PHPNature" />
   </extension>
   <!-- PHPAspect Content type -->
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.php.core.phpsource"
            file-extensions="ap"
            id="org.phpaspect.apdt.core.aspectsource"
            name="PHPAspect Content Type"
            priority="low">
      </content-type>
    </extension>
   <!-- PHPAspect builder -->
   <extension
         point="org.eclipse.dltk.core.buildParticipant">
      <buildParticipant
            class="org.phpaspect.apdt.internal.core.builder.AnnotationBuildParticipant"
            id="org.phpaspect.apdt.core.annotationsBuildParticipant"
            name="org.phpaspect.apdt.core.annotationsBuildParticipant"
            nature="org.eclipse.php.core.PHPNature">
      </buildParticipant>
   </extension>
</plugin>
