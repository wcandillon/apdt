<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.3"?>
<plugin>
   <extension
      id="org.phpaspect.apdt.core.PHPAspectBuilder" name="PHPAspect Builder" point="org.eclipse.core.resources.builders">
      <builder>
         <run 
            class="org.phpaspect.apdt.internal.core.builder.PHPAspectBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="phpAspectNature"
         name="PHPAspect Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.phpaspect.apdt.internal.core.builder.PHPAspectNature">
         </run>
      </runtime>
      <builder
            id="org.phpaspect.apdt.core.PHPAspectBuilder">
      </builder>
      <requires-nature id="org.eclipse.php.core.PHPNature" />
   </extension>
   <extension
         id="apProblem"
         name="PHPAspect Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
  <extension
         point="org.eclipse.core.runtime.contentTypes">
      <content-type
            base-type="org.eclipse.php.core.phpsource"
            file-extensions="ap"
            id="phpaspectsource"
            name="PHPAspect Content Type"
            priority="high">
      </content-type>
   </extension>
</plugin>
